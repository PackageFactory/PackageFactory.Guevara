{
  "collectCoverageFrom": [
    "src/**/*.js"
  ],
  "coveragePathIgnorePatterns": [
    "\\.(story.js)$"
  ],
  "transformIgnorePatterns": ["node_modules/(?!@neos-project)"],
  "unmockedModulePathPatterns": [
    "sinon"
  ],
  "setupFiles": [
    "../../node_modules/@neos-project/jest-preset-neos-ui/src/setupBrowserEnv.js",
    "../../node_modules/@neos-project/jest-preset-neos-ui/src/enzymeConfiguration.js"
  ],
  "testEnvironment": "node",
  "testMatch": [
    "**/src/**/?(*.)spec.js"
  ],
  "transform": {
    "^.+\\.js$": "babel-jest",
    "^.+\\.tsx?$": "ts-jest"
  },
  "moduleNameMapper": {
    "\\.css$": "identity-obj-proxy"
  },
  "moduleFileExtensions": [
    "ts",
    "tsx",
    "js",
    "jsx",
    "json",
    "node"
  ]
}
