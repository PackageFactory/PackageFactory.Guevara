{
  "name": "@neos-project/neos-ui-ckeditor-bindings",
  "version": "1.0.0-beta6",
  "description": "Prepare CKEditor for the Neos CMS UI",
  "private": true,
  "main": "./src/manifest.js",
  "scripts": {
    "prebuild": "check-dependencies && yarn clean",
    "test": "yarn jest",
    "test:watch": "yarn jest -- --watch",
    "build": "NEOS_BUILD_ROOT=$(pwd) webpack --progress --colors",
    "build:watch": "yarn build -- --watch",
    "clean": "rimraf ./lib ./dist",
    "lint": "eslint src",
    "jest": "PWD=$(pwd) NODE_ENV=test jest -w 1 --coverage"
  },
  "devDependencies": {
    "@neos-project/build-essentials": "1.0.0-beta6"
  },
  "dependencies": {
    "@neos-project/neos-ui-backend-connector": "1.0.0-beta6",
    "@neos-project/neos-ui-decorators": "1.0.0-beta6",
    "@neos-project/neos-ui-extensibility": "1.0.0-beta6",
    "@neos-project/neos-ui-guest-frame": "1.0.0-beta6",
    "@neos-project/neos-ui-redux-store": "1.0.0-beta6",
    "@neos-project/react-ui-components": "1.0.0-beta6"
  },
  "license": "GNU GPLv3",
  "jest": {
    "transformIgnorePatterns": [],
    "unmockedModulePathPatterns": [
      "sinon"
    ],
    "setupFiles": [
      "./node_modules/@neos-project/build-essentials/src/setup-browser-env.js",
      "./node_modules/@neos-project/build-essentials/src/setup-neos-ui-host-env.js",
      "./node_modules/@neos-project/build-essentials/src/enzymeConfiguration.js"
    ],
    "transform": {
      "neos-ui-ckeditor-bindings/src/.+\\.jsx?$": "./node_modules/.bin/babel-jest",
      "node_modules/@neos-project/.+\\.jsx?$": "./node_modules/.bin/babel-jest"
    },
    "moduleNameMapper": {
      "\\.css": "identity-obj-proxy"
    }
  }
}
